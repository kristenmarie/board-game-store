<h1>
  <%= @product.title %>
  <% if current_user && current_user.admin %>
    <button class="btn"> <%= link_to "Edit", edit_product_path %></button>
    <button class="btn"><%= link_to "Delete", product_path(@product),
                               :data => {:confirm => "Are you sure?",
                                              :method => "delete"} %></button>
  <% end %>
</h1>
